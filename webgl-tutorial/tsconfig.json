{
  "compilerOptions": {
    "module": "esnext",
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noPropertyAccessFromIndexSignature": false,
    "strict": true,
    "target": "es2022",
    "sourceMap": true,
    "esModuleInterop": true
  },
  "files": [
    "types/minMatrix.d.ts",
    "polygon/script.ts",
    "light/script.ts",
    "texture_and_blending/script.ts",
    "quaternion/script.ts",
    "billboard/script.ts",
    "point_and_line/script.ts",
    "stencil/script.ts",
    "framebuffer/script.ts",
    "cubemap/script.ts",
    "toon/script.ts",
    "shadowmap/script.ts",
    "filter/script.ts",
    "mirror/script.ts",
    "script.ts"
  ]
}
